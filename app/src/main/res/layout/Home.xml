<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:foregroundTint="#4CAF50"
    android:visibility="visible">

    <Button
        android:id="@+id/btnKast"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="384dp"
        android:backgroundTint="#4CAF50"
        android:text="@string/uw_voedselkast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bovenbalkhomescreen"
        android:layout_width="410dp"
        android:layout_height="96dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="633dp"
        android:contentDescription="@string/bovenbalkfoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bovenbalkwhatsnext" />

    <ImageButton
        android:id="@+id/btnSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="339dp"
        android:layout_marginBottom="655dp"
        android:backgroundTint="#FFFFFF"
        android:contentDescription="@string/instellingen"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="595dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#4CAF50"
        android:clickable="true"
        android:contentDescription="@string/camera"
        android:focusable="true"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scaleType="center"
        android:tint="#000000"
        app:barrierAllowsGoneWidgets="false"
        app:barrierDirection="top"
        app:fabCustomSize="100dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913"
        app:maxImageSize="45dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        app:useCompatPadding="true" />

    <TextView
        android:id="@+id/txtWelkom"
        android:layout_width="341dp"
        android:layout_height="61dp"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="114dp"
        android:text="@string/welkom_georgette"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnKast"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="312dp"
        android:gravity="center"
        android:text="@string/result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>